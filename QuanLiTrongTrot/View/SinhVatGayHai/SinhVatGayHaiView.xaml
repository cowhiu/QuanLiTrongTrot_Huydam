<UserControl x:Class="QuanLiTrongTrot.View.SinhVatGayHai.SinhVatGayHaiView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="txtTitle" Text="Danh má»¥c Sinh Váº­t GÃ¢y Háº¡i" 
               FontSize="20" FontWeight="Bold" Foreground="#333"
               VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Border Background="White" BorderBrush="#DDD" BorderThickness="1" 
                CornerRadius="5" Padding="10,5" Margin="0,0,10,0">
                    <TextBox x:Name="txtSearch" BorderThickness="0" Width="180"
                     VerticalAlignment="Center" FontSize="13"
                     TextChanged="txtSearch_TextChanged"/>
                </Border>

                <Button x:Name="btnThemMoi" Content="+ ThÃªm má»›i" 
                Background="#4CAF50" Foreground="White"
                Padding="15,8" FontSize="13"
                BorderThickness="0" Cursor="Hand"
                Click="BtnThemMoi_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <!-- DATAGRID -->
        <DataGrid x:Name="dgSinhVatGayHai" Grid.Row="1"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          CanUserAddRows="False"
          GridLinesVisibility="Horizontal"
          HeadersVisibility="Column"
          BorderThickness="1"
          BorderBrush="#E0E0E0"
          RowHeight="40"
          SelectionMode="Single"
          Background="White">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="Foreground" Value="#333"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>

        <!-- FOOTER -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Tá»•ng sá»‘ bÃªn trÃ¡i -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Tá»•ng sá»‘: " FontSize="13" Foreground="#666"/>
                <TextBlock x:Name="txtTongSo" Text="0" FontSize="13" FontWeight="Bold" Foreground="#333"/>
            </StackPanel>

            <!-- NÃºt XÃ³a bÃªn pháº£i -->
            <Button x:Name="btnXoa" Grid.Column="1" Content="ðŸ—‘ XÃ³a" 
            Background="#F44336" Foreground="White"
            Padding="20,10" FontSize="13"
            BorderThickness="0" Cursor="Hand"
            Click="BtnXoa_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</UserControl>