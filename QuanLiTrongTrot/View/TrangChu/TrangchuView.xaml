<UserControl x:Class="QuanLiTrongTrot.View.TrangChu.TrangchuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="White">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="142*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="0,0,0,15" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="txtTitle" Text="Danh mục Tài khoản" 
           FontSize="20" FontWeight="Bold" Foreground="#333"
           VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Border Background="White" BorderBrush="#DDD" BorderThickness="1" 
            CornerRadius="5" Padding="10,5" Margin="0,0,10,0">
                    <TextBox x:Name="txtSearch" BorderThickness="0" Width="180"
                 VerticalAlignment="Center" FontSize="13"
                 TextChanged="txtSearch_TextChanged"/>
                </Border>

                <Button x:Name="btnThemMoi" Content="+ Thêm mới" 
            Background="#4CAF50" Foreground="White"
            Padding="15,8" FontSize="13"
            BorderThickness="0" Cursor="Hand"
            Click="BtnThemMoi_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <!-- DATAGRID -->
        <DataGrid x:Name="dgTrangChu"
      AutoGenerateColumns="False"
      IsReadOnly="True"
      CanUserAddRows="False"
      GridLinesVisibility="Horizontal"
      HeadersVisibility="Column"
      BorderThickness="1"
      BorderBrush="#E0E0E0"
      RowHeight="40"
      SelectionMode="Single"
      Background="White" Grid.ColumnSpan="2" Margin="0,48,0,47" Grid.RowSpan="3"
      MouseDoubleClick="Xa">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="Foreground" Value="#333"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>

        <!-- FOOTER -->
        <Grid x:Name="Main1" Grid.Row="2" Margin="0,10,0,0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Tổng số bên trái -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Tổng số: " FontSize="13" Foreground="#666"/>
                <TextBlock x:Name="txtTongSo" Text="0" FontSize="13" FontWeight="Bold" Foreground="#333"/>
            </StackPanel>

            <!-- Nút Xóa bên phải -->
            <Button x:Name="btnXoa" Grid.Column="1" Content="🗑 Xóa" 
        Background="#F44336" Foreground="White"
        Padding="20,10" FontSize="13"
        BorderThickness="0" Cursor="Hand"
        Click="BtnXoa_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</UserControl>