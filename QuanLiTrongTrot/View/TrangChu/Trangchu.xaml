<UserControl x:Class="QuanLiTrongTrot.View.TrangChu.TrangChu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLiTrongTrot.View.TrangChu"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <!-- Header Section: Current Weather + Map -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Current Weather Info (Left) -->
            <Border Grid.Column="0" Background="#FF6B35" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Date Time -->
                    <TextBlock x:Name="DisplayTime" Grid.Row="0" Text="" 
                               Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                    
                    <!-- Location -->
                    <TextBlock Grid.Row="1" Text="{Binding CityName}" 
                               Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <!-- Temperature -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                        <Image x:Name="WeatherIcon" Width="40" Height="40" Margin="0,0,10,0"/>
                        <TextBlock x:Name="Temperature" Text="{Binding Temperature}" 
                                   Foreground="White" FontSize="48" FontWeight="Light" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Weather Description -->
                    <TextBlock x:Name="WeatherDescription" Grid.Row="3" 
                               Text="{Binding Description}" 
                               Foreground="White" FontSize="13" Margin="0,0,0,15" TextWrapping="Wrap"/>

                    <!-- Weather Details -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="Wind" Grid.Row="0" Grid.Column="0" Text="" 
                                   Foreground="White" FontSize="12" Margin="0,3"/>
                        <TextBlock x:Name="Pressure" Grid.Row="0" Grid.Column="1" Text="" 
                                   Foreground="White" FontSize="12" Margin="0,3"/>
                        <TextBlock x:Name="Humidity" Grid.Row="1" Grid.Column="0" Text="{Binding Humidity}" 
                                   Foreground="White" FontSize="12" Margin="0,3"/>
                        <TextBlock x:Name="UV" Grid.Row="1" Grid.Column="1" Text="" 
                                   Foreground="White" FontSize="12" Margin="0,3"/>
                        <TextBlock x:Name="DewPoint" Grid.Row="2" Grid.Column="0" Text="" 
                                   Foreground="White" FontSize="12" Margin="0,3"/>
                        <TextBlock x:Name="VisibilityText" Grid.Row="2" Grid.Column="1" Text="" 
                                   Foreground="White" FontSize="12" Margin="0,3"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Map Section (Right) -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Map Placeholder -->
                    <Border Grid.Row="0" Background="#E8E8E8" CornerRadius="5">
                        <Image x:Name="MapImage" Stretch="UniformToFill"/>
                    </Border>

                    <!-- Precipitation Info -->
                    <Border Grid.Row="1" Background="White" Padding="10" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock x:Name="PrecipitationText" Text="No precipitation within an hour" 
                                       FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <!-- Timeline -->
                            <Grid Height="30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="now" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="15min" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="30min" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="45min" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="60min" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
                            </Grid>
                            <!-- Progress Bar -->
                            <Border Background="#E0E0E0" Height="8" CornerRadius="4">
                                <Border x:Name="PrecipitationBar" Background="#4CAF50" Width="0" 
                                        HorizontalAlignment="Left" CornerRadius="4"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Section: Hourly + 8-day Forecast -->
        <Grid Grid.Row="1" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Hourly Forecast (Left) -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Hourly forecast" FontSize="18" FontWeight="SemiBold" 
                               Foreground="#333" Margin="0,0,0,15"/>

                    <!-- Chart Area -->
                    <Border Grid.Row="1" x:Name="HourlyChartArea" Background="#FAFAFA" CornerRadius="5" MinHeight="200">
                        <Grid>
                            <!-- Y-Axis Labels -->
                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="40">
                                <TextBlock Text="20°" FontSize="10" Foreground="Gray" Margin="0,10,0,0"/>
                                <TextBlock Text="18°" FontSize="10" Foreground="Gray" Margin="0,30,0,0"/>
                                <TextBlock Text="16°" FontSize="10" Foreground="Gray" Margin="0,30,0,0"/>
                                <TextBlock Text="14°" FontSize="10" Foreground="Gray" Margin="0,30,0,0"/>
                                <TextBlock Text="12°" FontSize="10" Foreground="Gray" Margin="0,30,0,0"/>
                            </StackPanel>

                            <!-- Chart Placeholder -->
                            <Canvas x:Name="HourlyChart" Margin="45,10,10,50"/>

                            <!-- X-Axis Labels (Time) -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="45,0,0,30">
                                <TextBlock Text="3pm" FontSize="10" Foreground="Gray" Width="40"/>
                                <TextBlock Text="4pm" FontSize="10" Foreground="Gray" Width="40"/>
                                <TextBlock Text="5pm" FontSize="10" Foreground="Gray" Width="40"/>
                                <TextBlock Text="6pm" FontSize="10" Foreground="Gray" Width="40"/>
                                <TextBlock Text="7pm" FontSize="10" Foreground="Gray" Width="40"/>
                                <TextBlock Text="8pm" FontSize="10" Foreground="Gray" Width="40"/>
                                <TextBlock Text="9pm" FontSize="10" Foreground="Gray" Width="40"/>
                                <TextBlock Text="10pm" FontSize="10" Foreground="Gray" Width="40"/>
                                <TextBlock Text="11pm" FontSize="10" Foreground="Gray" Width="40"/>
                            </StackPanel>

                            <!-- Bottom Info Row -->
                            <ItemsControl x:Name="HourlyDetails" VerticalAlignment="Bottom" Margin="45,0,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- 8-day Forecast (Right) -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="8-day forecast" FontSize="18" FontWeight="SemiBold" 
                               Foreground="#333" Margin="0,0,0,15"/>

                    <!-- Forecast List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ForecastList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="5,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Date}" FontSize="13" VerticalAlignment="Center"/>
                                            <Image Grid.Column="1" Source="{Binding Icon}" Width="30" Height="30"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Temp}" FontSize="13" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                            <TextBlock Grid.Column="3" Text="{Binding Description}" FontSize="11" Foreground="Gray" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
