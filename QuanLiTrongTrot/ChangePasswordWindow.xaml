<Window x:Class="QuanLiTrongTrot.ChangePasswordWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 mc:Ignorable="d"
 Title="Đổi mật khẩu" Height="300" Width="380"
 WindowStartupLocation="CenterOwner"
 ResizeMode="NoResize"
 Background="#F5F5F5">

 <Border Margin="14" Padding="14" Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
 <Grid>
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="Auto"/>
 </Grid.RowDefinitions>
 <Grid.ColumnDefinitions>
 <ColumnDefinition Width="130"/>
 <ColumnDefinition Width="*"/>
 </Grid.ColumnDefinitions>

 <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
 Text="Đổi mật khẩu" FontSize="18" FontWeight="Bold"
 Foreground="#2E7D32" HorizontalAlignment="Center" Margin="0,0,0,12"/>

 <TextBlock Grid.Row="1" Grid.Column="0" Text="Mật khẩu cũ" VerticalAlignment="Center" Margin="0,0,10,10"/>
 <PasswordBox Grid.Row="1" Grid.Column="1" x:Name="pbOldPassword" Height="28" Padding="8,0" Margin="0,0,0,10"/>

 <TextBlock Grid.Row="2" Grid.Column="0" Text="Mật khẩu mới" VerticalAlignment="Center" Margin="0,0,10,10"/>
 <PasswordBox Grid.Row="2" Grid.Column="1" x:Name="pbNewPassword" Height="28" Padding="8,0" Margin="0,0,0,10"/>

 <TextBlock Grid.Row="3" Grid.Column="0" Text="Nhập lại" VerticalAlignment="Center" Margin="0,0,10,10"/>
 <PasswordBox Grid.Row="3" Grid.Column="1" x:Name="pbConfirmPassword" Height="28" Padding="8,0" Margin="0,0,0,10"/>

 <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
 <Button Width="90" Height="32" Margin="0,0,10,0"
 Content="Hủy" IsCancel="True" Click="Button_Click"/>
 <Button Width="120" Height="32"
 Content="Đổi mật khẩu" IsDefault="True"
 Background="#2E7D32" Foreground="White" BorderThickness="0"
 Click="BtnChangePassword_Click"/>
 </StackPanel>
 </Grid>
 </Border>
</Window>
