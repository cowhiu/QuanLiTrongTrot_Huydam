<Window x:Class="QuanLiTrongTrot.RegisterPb"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLiTrongTrot"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Vấn đề tài khoản" Height="440" Width="370"
        ResizeMode="NoResize">
    <Grid Background="#F5F5F5">
        <TabControl Margin="16">
            <!-- Tab Đăng ký tài khoản mới -->
            <TabItem Header="Đăng ký tài khoản">
                <StackPanel Margin="8">
                    <TextBlock Text="Đăng ký tài khoản mới" FontSize="20" FontWeight="Bold" Foreground="#2E7D32" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <TextBlock Text="Tên đăng nhập" Margin="0,8,0,2" FontSize="14"/>
                    <TextBox x:Name="txtNewUsername" Height="26" FontSize="15" Padding="8,0"/>
                    <TextBlock Text="Mật khẩu" Margin="0,8,0,2" FontSize="14"/>
                    <PasswordBox x:Name="txtNewPassword" Height="25" FontSize="15" Padding="8,0"/>
                    <TextBlock Text="Nhập lại mật khẩu" Margin="0,8,0,2" FontSize="14"/>
                    <PasswordBox x:Name="txtConfirmPassword" Height="26" FontSize="15" Padding="8,0"/>
                    <Button Content="Đăng ký" Height="36" Margin="0,16,0,0" Background="#2E7D32" Foreground="White" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" FontSize="15" Click="BtnRegister_Click"/>
                </StackPanel>
            </TabItem>
            <!-- Tab Quên mật khẩu -->
            <TabItem Header="Quên mật khẩu">
                <StackPanel Margin="8">
                    <TextBlock Text="Quên mật khẩu" FontSize="20" FontWeight="Bold" Foreground="#1976D2" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <TextBlock Text="Tên đăng nhập" Margin="0,8,0,2" FontSize="14"/>
                    <TextBox x:Name="txtForgotUsername" Height="25" FontSize="15" Padding="8,0"/>
                    <TextBlock Text="Mật khẩu mới" Margin="0,8,0,2" FontSize="14"/>
                    <PasswordBox x:Name="txtForgotNewPassword" Height="27" FontSize="15" Padding="8,0"/>
                    <TextBlock Text="Nhập lại mật khẩu mới" Margin="0,8,0,2" FontSize="14"/>
                    <PasswordBox x:Name="txtForgotConfirmPassword" Height="24" FontSize="15" Padding="8,0"/>
                    <Button Content="Đặt lại mật khẩu" Height="36" Margin="0,16,0,0" Background="#1976D2" Foreground="White" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand" FontSize="15" Click="BtnResetPassword_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
